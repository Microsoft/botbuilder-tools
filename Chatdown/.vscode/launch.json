    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/test",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "chatdown.lib.test.suite.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\bin\\chatdown",
            "args": ["${workspaceFolder}\\examples\\conversationUpdate.chat"]
        }
    ]
}