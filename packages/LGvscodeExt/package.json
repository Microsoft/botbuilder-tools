{
    "name": "lg-language",
    "displayName": "LG language",
    "description": "lg file",
    "version": "0.6.5",
    "publisher": "bot-framework",
    "repository": {
        "type": "git",
        "url": "https://github.com/microsoft/botbuilder-tools.git"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "contributes": {
        "configuration": [
			{
				"title": "LG",
				"properties": {
					"conf.view.ignoreUnknownFunction": {
						"type": "string",
						"enum": [
							"error",
							"warn",
							"ignore"
						],
						"default": "error",
						"description": "Configure Diagnostics: Show diagnostic severity level of unknow functions in a LG file",
						"scope": "window"
					}
				}
			}
		],
        "commands": [
            {
                "command": "lgLiveTest.start",
                "title": "Start LG debug",
                "category": "LG Live Test"
            }
        ],
        "languages": [
            {
                "id": "lg",
                "aliases": [
                    "LG",
                    "lg"
                ],
                "extensions": [
                    ".lg"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lg",
                "scopeName": "source.lg",
                "path": "./syntaxes/lg.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "lg",
                "path": "./snippets/lg.json"
            }
        ],
        "keybindings": [
            {
                "command": "lg.extension.onEnterKey",
                "key": "enter",
                "when": "editorTextFocus && !editorReadonly && editorLangId == lg && !suggestWidgetVisible && vim.mode != 'Normal' && vim.mode != 'Visual' && vim.mode != 'VisualBlock' && vim.mode != 'VisualLine' && vim.mode != 'SearchInProgressMode' && vim.mode != 'CommandlineInProgress' && vim.mode != 'Replace' && vim.mode != 'EasyMotionMode' && vim.mode != 'EasyMotionInputMode' && vim.mode != 'SurroundInputMode'"
            }
        ]
    },
    "activationEvents": [
        "onCommand:lgLiveTest.start",
        "onWebviewPanel:lgLiveTest",
        "*"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "botbuilder-lg": "https://botbuilder.myget.org/F/botbuilder-declarative/npm/botbuilder-lg/-/4.7.0-preview2.tgz"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.11.0",
        "typescript": "^3.4.5",
        "vscode": "^1.1.36"
    }
}
